{
  "id": "plugin-db2",
  "displayName": "IBM DB2",
  "description": "Publisher which connects to IBM's DB2 Database",
  "apiVersion": "2",
  "versionDescription": "Version 2",
  "version": "1.0.1",
  "iconFile": "icon.png",
  "executable": "PluginDb2",
  "kind": "publisher",
  "os": "$GOOS",
  "arch": "$GOARCH",
  "canProduceMultipleSchemas": true,
  "canAcceptQueryBasedSchemas": false,
  "canUseOAuth": false,
  "canWrite": false,
  "canConfigureReplication": false,
  "canWriteReplication": false,
  "querySchema": {
    "ui": {
      "ui:widget": "code",
      "ui:options": {
        "language": "sql"
      }
    },
    "schema": {
      "type": "string"
    }
  },
  "configSchema": {
    "ui": {
      "ui:order": [
        "Server",
        "Port",
        "Database",
        "Username",
        "Password"
      ],
      "Password": {
        "ui:widget": "password"
      }
    },
    "schema": {
      "type": "object",
      "properties": {
        "Server" : {
          "type": "string",
          "title": "Server",
          "description": "The Server hostname or IP of the DB2 Server"
        },
        "Port": {
          "type": "integer",
          "title": "Port",
          "description": "The port of the DB2 Server"
        },
        "Username": {
          "type": "string",
          "title": "Username",
          "description": "The username to use for authentication"
        },
        "Password": {
          "type": "string",
          "title": "Password",
          "description": "The password to use for authentication"
        },
        "Database": {
          "type": "string",
          "title": "Database",
          "description": "The Database within the DB2 instance"
        }
      },
      "required": [
        "Server",
        "Username",
        "Password",
        "Database"
      ]
    }
  }
}