{
  "id": "plugin-db2",
  "displayName": "IBM DB2",
  "description": "Publisher which connects to IBM's DB2 Database",
  "apiVersion": "2",
  "versionDescription": "Version 2",
  "version": "1.3.11",
  "iconFile": "icon.png",
  "executable": "PluginDb2",
  "kind": "publisher",
  "os": "$GOOS",
  "arch": "$GOARCH",
  "accessGroups": [],
  "canConfigure": true,
  "canProduceMultipleSchemas": true,
  "canAcceptQueryBasedSchemas": true,
  "canUseOAuth": false,
  "canConfigureWrite": true,
  "canWrite": true,
  "canConfigureReplication": true,
  "canWriteReplication": true,
  "querySchema": {
    "ui": {
      "ui:widget": "code",
      "ui:options": {
        "language": "sql"
      }
    },
    "schema": {
      "type": "string"
    }
  },
  "configSchema": {
    "ui": {
      "ui:order": [
        "Server",
        "Port",
        "Database",
        "Username",
        "Password",
        "Mode",
        "DisableDiscovery",
        "DiscoveryLibraries"
      ],
      "Password": {
        "ui:widget": "password"
      }
    },
    "schema": {
      "type": "object",
      "properties": {
        "Server" : {
          "type": "string",
          "title": "Server",
          "description": "The Server hostname or IP of the DB2 Server"
        },
        "Port": {
          "type": "integer",
          "title": "Port",
          "description": "The port of the DB2 Server"
        },
        "Username": {
          "type": "string",
          "title": "Username",
          "description": "The username to use for authentication"
        },
        "Password": {
          "type": "string",
          "title": "Password",
          "description": "The password to use for authentication"
        },
        "Database": {
          "type": "string",
          "title": "Database",
          "description": "The Database within the DB2 instance"
        },
        "Mode": {
          "type": "string",
          "title": "Mode",
          "description": "The DB2 mode the target system is running",
          "default": "LUW",
          "enum": [
            "LUW",
            "iSeries",
            "zOS"
          ]
        },
        "DisableDiscovery": {
          "type": "boolean",
          "title": "Disable Discovery",
          "description": "Disable automatic discovery",
          "default": false,
          "examples": [
            true,
            false
          ]
        },
        "DiscoveryLibraries": {
          "title": "Discovery Libraries",
          "description": "Libraries to discover within, if none are provided all will be inspected.",
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "default": ""
          }
        }
      },
      "required": [
        "Server",
        "Username",
        "Password",
        "Database",
        "Mode",
        "DisableDiscovery"
      ]
    }
  }
}